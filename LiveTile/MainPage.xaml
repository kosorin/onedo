    <Grid Background="Transparent">
        <Grid Width="336"
              Height="336"
              Background="{StaticResource PhoneAccentBrush}"
              RenderTransformOrigin="0,0">
            <Grid.RenderTransform>
                <CompositeTransform ScaleX="1"
                                    ScaleY="1" />
            </Grid.RenderTransform>

            <Grid Background="#10000000">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Název + priorita-->
                <Grid Grid.Row="0"
                      Background="#20000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ContentControl Style="{StaticResource HighPriorityIconStyle}"
                                    VerticalAlignment="Top"
                                    Margin="6,6,-6,0" />

                    <TextBlock Grid.Column="1"
                               Text="Handcrafted pixel perfect icons"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="Segoe WP"
                               FontWeight="Light"
                               FontSize="32"
                               Margin="8,0,8,4" />
                </Grid>

                <!--Detail nebo Subtasks-->
                <Grid Grid.Row="1">
                    <TextBlock Text="Handcrafted pixel perfect icons tailored for the Modern UI style. Handcrafted pixel perfect icons tailored for the Modern UI style."
                               Visibility="Collapsed"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="Segoe WP"
                               FontWeight="Light"
                               FontSize="32"
                               Margin="8,0,8,8" />

                    <StackPanel Orientation="Horizontal"
                                Height="50"
                                Margin="8,0"
                                VerticalAlignment="Top">
                        <Grid>
                            <Border Width="40"
                                    Height="40"
                                    BorderThickness="1"
                                    Background="#33000000"
                                    BorderBrush="#66FFFFFF" />
                            <ContentControl Style="{StaticResource CheckIconStyle}" />
                        </Grid>

                        <TextBlock Text="Handcrafted pixel perfect icons tailored for the Modern UI style. Handcrafted pixel perfect icons tailored for the Modern UI style."
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   FontFamily="Segoe WP"
                                   FontWeight="Light"
                                   FontSize="30"
                                   Margin="4,4,0,0" />
                    </StackPanel>

                </Grid>

                <!--Datum + připomenutí-->
                <Grid Grid.Row="2"
                      Background="#20000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <ContentControl Style="{StaticResource CalendarIconStyle}" />

                        <TextBlock Text="12/16/2014"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   FontFamily="Segoe WP"
                                   FontWeight="Light"
                                   FontSize="26"
                                   Margin="-4,2,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <ContentControl Style="{StaticResource ReminderIconStyle}"
                                        HorizontalAlignment="Right" />

                        <TextBlock Text="in due time"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   FontFamily="Segoe WP"
                                   FontWeight="Light"
                                   FontSize="26"
                                   Margin="-4,2,8,0" />
                    </StackPanel>
                </Grid>
            </Grid>

        </Grid>
    </Grid>

</phone:PhoneApplicationPage>