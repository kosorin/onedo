<phone:PhoneApplicationPage
    x:Class="SimpleTasks.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True"
    shell:SystemTray.BackgroundColor="{StaticResource PhoneChromeColor}"
    toolkit:TiltEffect.IsTiltEnabled="True">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <Grid x:Name="LayoutRoot"
          Background="{StaticResource ApplicationBackgroundBrush}">
        <phone:Pivot Title="{Binding LocalizedResources.SettingsTitle, Source={StaticResource LocalizedStrings}}">

            <!--General-->
            <phone:PivotItem Header="{Binding LocalizedResources.SettingsGeneral, Source={StaticResource LocalizedStrings}}">
                <ScrollViewer>
                    <StackPanel>

                        <!--Default due date-->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{Binding LocalizedResources.SettingsDefaultDueDate, Source={StaticResource LocalizedStrings}}" 
                                       Style="{StaticResource PhoneTextSubtleStyle}"/>
                            <toolkit:ListPicker x:Name="DueDatePicker" 
                                                ItemsSource="{Binding DueDatePickerItems, Mode=OneTime}"
                                                SelectedItem="{Binding DueDatePickerSelectedItem, Mode=TwoWay}" 
                                                Margin="12,0,12,12">
                                <toolkit:ListPicker.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Value}" />
                                    </DataTemplate>
                                </toolkit:ListPicker.ItemTemplate>
                            </toolkit:ListPicker>
                        </StackPanel>

                        <!--First day of week-->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{Binding LocalizedResources.SettingsFirstDayOfWeek, Source={StaticResource LocalizedStrings}}" 
                                       Style="{StaticResource PhoneTextSubtleStyle}"/>
                            <toolkit:ListPicker x:Name="FirstDayOfWeekPicker" 
                                                ItemsSource="{Binding FirstDayOfWeekPickerItems, Mode=OneTime}"
                                                SelectedItem="{Binding FirstDayOfWeekPickerSelectedItem, Mode=TwoWay}" 
                                                Margin="12,0,12,12"
                                                FullModeHeader="{Binding LocalizedResources.SettingsFirstDayOfWeekPickerHeader, Source={StaticResource LocalizedStrings}}">
                                <toolkit:ListPicker.FullModeItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Value}"
                                                   Style="{StaticResource PhoneTextExtraLargeStyle}"
                                                   Margin="12,20,12,0"/>
                                    </DataTemplate>
                                </toolkit:ListPicker.FullModeItemTemplate>
                                <toolkit:ListPicker.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Value}"/>
                                    </DataTemplate>
                                </toolkit:ListPicker.ItemTemplate>
                            </toolkit:ListPicker>
                        </StackPanel>

                        <toolkit:TimePicker x:Name="ReminderTimePicker"
                                            Header="Výchozí čas připomenutí"
                                            Value="{Binding DefaultReminderTimeSetting, Mode=TwoWay}" Margin="0,0,0,12"/>

                        <!--Automatically delete completed tasks-->
                        <StackPanel Margin="0,0,0,12">
                            <toolkit:ToggleSwitch Header="{Binding LocalizedResources.SettingsDeleteCompletedTasks, Source={StaticResource LocalizedStrings}}"
							                      IsChecked="{Binding DeleteCompletedTasksSetting, Mode=TwoWay, FallbackValue=True}"
                                                  x:Name="DeleteCompletedToggleSwitch" 
                                                  Margin="0,0,0,-20" 
                                                  Checked="DeleteCompletedToggleSwitch_Checked" 
                                                  Unchecked="DeleteCompletedToggleSwitch_Unchecked" />
                            <StackPanel x:Name="DeleteCompletedDaysPanel"
                                        Opacity="{Binding Path=IsChecked, 
                                                          ElementName=DeleteCompletedToggleSwitch, 
                                                          Converter={StaticResource BooleanToNumberConverter},
                                                          Mode=OneTime}">
                                <StackPanel.Resources>
                                    <Storyboard x:Name="DeleteCompletedDaysShowStoryboard">
                                        <DoubleAnimation Storyboard.TargetName="DeleteCompletedDaysPanel" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                    <Storyboard x:Name="DeleteCompletedDaysHideStoryboard">
                                        <DoubleAnimation Storyboard.TargetName="DeleteCompletedDaysPanel" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.3"/>
                                    </Storyboard>
                                </StackPanel.Resources>
                                <TextBlock Text="{Binding LocalizedResources.SettingsDeleteCompletedTasksDays, Source={StaticResource LocalizedStrings}}" 
                                           Style="{StaticResource PhoneTextSubtleStyle}"/>
                                <toolkit:ListPicker x:Name="DaysPicker" 
                                                    ItemsSource="{Binding DaysPickerItems, Mode=OneTime}"
                                                    SelectedItem="{Binding DaysPickerSelectedItem, Mode=TwoWay}" 
                                                    Margin="12,0,12,12">
                                    <toolkit:ListPicker.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Value}" />
                                        </DataTemplate>
                                    </toolkit:ListPicker.ItemTemplate>
                                </toolkit:ListPicker>
                                <TextBlock Text="{Binding LocalizedResources.SettingsDeleteCompletedTasksInfo, Source={StaticResource LocalizedStrings}}" 
                                           Style="{StaticResource PhoneTextSubtleStyle}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </phone:PivotItem>

        </phone:Pivot>
    </Grid>

</phone:PhoneApplicationPage>