<phone:PhoneApplicationPage
    x:Class="SimpleTasks.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:controls="clr-namespace:SimpleTasks.Controls"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    d:DataContext="{d:DesignData ../SampleData/MainSampleData.xaml}"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True"
    shell:SystemTray.BackgroundColor="{StaticResource PhoneChromeColor}"
    toolkit:TiltEffect.IsTiltEnabled="True">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <phone:PhoneApplicationPage.Resources>
        <SolidColorBrush x:Key="TasksLongListSelectorBackgroundBrush" 
                         Color="{StaticResource PhoneSubtleColor}" 
                         Opacity="0.2"/>

        <Style x:Key="TextBlockInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="0,1,8,0" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Foreground" Value="{StaticResource PhoneSubtleBrush}" />
        </Style>

        <DataTemplate x:Key="TasksLongListSelectorGroupHeaderTemmplate">
            <Border Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                    Margin="0,-1,0,0"
                    toolkit:TiltEffect.SuppressTilt="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{StaticResource PhoneAccentBrush}"
                            Padding="12,2,12,2"
                            HorizontalAlignment="Right"
                            Grid.Column="1">
                        <TextBlock Text="{Binding Title}" 
                                   Foreground="{StaticResource PhoneForegroundBrush}" 
                                   FontSize="24"
                                   Padding="6"
                                   FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                            Margin="0,40,0,0"
                            Grid.ColumnSpan="2"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TasksLongListSelectorItemTemplate">
            <Border BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource TasksLongListSelectorBackgroundBrush}">
                <Grid Opacity="{Binding Converter={StaticResource TaskToOpacityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--<Path Width="60"
                          Height="60"
                          Fill="{StaticResource PhoneAccentBrush}"
                          Data="M 0,0 L 32,0 L 0,32 Z" HorizontalAlignment="Left" VerticalAlignment="Top">
                    </Path>-->
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding TitleFirstLine}"
                                   Style="{StaticResource ButtonTextBlockStyle}"
                                   Opacity="1"
                                   Margin="20,10,20,0"/>
                        <StackPanel Orientation="Vertical">
                            <Grid MaxHeight="32"
                                    Margin="12,-2,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <controls:Icon Style="{StaticResource CheckIconStyle}"
                                                       Color="{StaticResource PhoneSubtleBrush}"
                                                       Margin="4,0,-26,0"
                                                       MaxHeight="0"
                                                       RenderTransformOrigin="0,0">
                                            <controls:Icon.RenderTransform>
                                                <CompositeTransform ScaleX="0.55" ScaleY="0.55" TranslateY="-16"/>
                                            </controls:Icon.RenderTransform>
                                        </controls:Icon>
                                        <TextBlock Style="{StaticResource TextBlockInfo}"
                                                   Text="{Binding LocalizedResources.DateCompleted, Source={StaticResource LocalizedStrings}}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" 
                                                Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal"
                                                    Visibility="{Binding HasDueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <controls:Icon Style="{StaticResource CalendarIconStyle}"
                                                            Color="{StaticResource PhoneAccentBrush}"
                                                            Margin="4,0,-26,0"
                                                            MaxHeight="0"
                                                            RenderTransformOrigin="0,0">
                                                <controls:Icon.RenderTransform>
                                                    <CompositeTransform ScaleX="0.55" ScaleY="0.55" TranslateY="-16"/>
                                                </controls:Icon.RenderTransform>
                                            </controls:Icon>
                                            <TextBlock Style="{StaticResource TextBlockInfo}"
                                                        Text="{Binding Converter={StaticResource TaskToDueDateStringConverter}}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <controls:Icon Style="{StaticResource ReminderIconStyle}"
                                                           Color="{StaticResource PhoneAccentBrush}"
                                                           Margin="0,0,-26,0"
                                                           MaxHeight="0"
                                                           RenderTransformOrigin="0,0">
                                                <controls:Icon.RenderTransform>
                                                    <CompositeTransform ScaleX="0.55" ScaleY="0.55" TranslateY="-16"/>
                                                </controls:Icon.RenderTransform>
                                            </controls:Icon>
                                            <TextBlock Style="{StaticResource TextBlockInfo}"
                                                       Text="{Binding Converter={StaticResource TaskToReminderDateStringConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding IsHighPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <controls:Icon Style="{StaticResource HighPriorityIconStyle}"
                                                        Color="{StaticResource PhoneAccentBrush}"
                                                        Opacity="1"
                                                        Margin="0,0,-32,0"
                                                        MaxHeight="0"
                                                        RenderTransformOrigin="0,0">
                                            <controls:Icon.RenderTransform>
                                                <CompositeTransform ScaleX="0.55" ScaleY="0.55" TranslateY="-16"/>
                                            </controls:Icon.RenderTransform>
                                        </controls:Icon>
                                        <TextBlock Style="{StaticResource TextBlockInfo}"
                                                    Text="{Binding LocalizedResources.PriorityHigh, Source={StaticResource LocalizedStrings}}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding IsLowPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <controls:Icon Style="{StaticResource LowPriorityIconStyle}"
                                                        Color="{StaticResource PhoneForegroundBrush}"
                                                        Opacity="0.6"
                                                        Margin="0,0,-31,0"
                                                        MaxHeight="0"
                                                        RenderTransformOrigin="0,0">
                                            <controls:Icon.RenderTransform>
                                                <CompositeTransform ScaleX="0.55" ScaleY="0.55" TranslateY="-16"/>
                                            </controls:Icon.RenderTransform>
                                        </controls:Icon>
                                        <TextBlock Style="{StaticResource TextBlockInfo}"
                                                    Text="{Binding LocalizedResources.PriorityLow, Source={StaticResource LocalizedStrings}}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <Grid Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{Binding TitleDescription}"
                                           Style="{StaticResource ButtonDescriptionTextBlockStyle}"
                                           Opacity="0.8"
                                           Margin="20,0,20,0"
                                           Visibility="{Binding TitleDescription, Converter={StaticResource NullToVisibilityConverter}}"/>
                            </Grid>
                        </StackPanel>
                        <Border Margin="0,0,0,12"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="QuickAddTextBoxHintStyle" TargetType="ContentControl">
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            <Setter Property="Foreground" Value="{StaticResource PhoneSubtleBrush}" />
        </Style>
    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot" 
          Background="{StaticResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"  />
        </Grid.RowDefinitions>
        <Grid x:Name="ContentPanel">
            <phone:LongListSelector x:Name="TasksLongListSelector"
                                    LayoutMode="List"
                                    ItemsSource="{Binding GroupedTasks}"
                                    GroupHeaderTemplate="{StaticResource TasksLongListSelectorGroupHeaderTemmplate}"
                                    ItemTemplate="{StaticResource TasksLongListSelectorItemTemplate}"
                                    IsGroupingEnabled="True"
                                    HideEmptyGroups="True"
                                    SelectionChanged="TasksLongListSelector_SelectionChanged"
                                    Loaded="TasksLongListSelector_Loaded" />

            <TextBlock Text="{Binding LocalizedResources.NoTasks, Source={StaticResource LocalizedStrings}}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource PhoneTextLargeStyle}"
                       Foreground="{StaticResource PhoneSubtleBrush}"
                       Visibility="{Binding Tasks.Count, 
                                            Converter={StaticResource IntegerToVisibilityConverter}, 
                                            ConverterParameter=0}"
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>
        </Grid>
        <Rectangle x:Name="PageOverlay"
                   Fill="{StaticResource PhoneBackgroundBrush}"
                   Opacity="0"
                   Visibility="Collapsed">
            <Rectangle.Resources>
                <Storyboard x:Name="PageOverlayTransitionShow">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.4"
                                     BeginTime="0:0:0.4"
                                     From="0"
                                     To="1">
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionHide">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.3"
                                     From="1"
                                     To="0">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </Rectangle.Resources>
        </Rectangle>
        <Rectangle Fill="{StaticResource PhoneAccentBrush}"
                   Opacity="0.45"
                   Height="7" 
                   VerticalAlignment="Bottom"/>
        
        <Grid Grid.Row="1">
            <toolkit:PhoneTextBox x:Name="QuickAddTextBox"
                                  Hint="&#8230;&#xe104;" 
                                  HintStyle="{StaticResource QuickAddTextBoxHintStyle}" 
                                  LostFocus="QuickAddTextBox_LostFocus" 
                                  GotFocus="QuickAddTextBox_GotFocus">
                <toolkit:PhoneTextBox.Resources>
                    <Style x:Key="QuickAddTextBoxStyle" TargetType="toolkit:PhoneTextBox">
                        <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}"/>
                        <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeMediumLarge}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="{StaticResource PhoneSubtleColor}" 
                                                 Opacity="0.45"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource PhoneSubtleColor}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PhoneAccentBrush}"/>
                        <Setter Property="SelectionBackground" Value="{StaticResource PhoneAccentBrush}"/>
                        <Setter Property="SelectionForeground" Value="{StaticResource PhoneTextBoxSelectionForegroundBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="InputScope" Value="Text" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="toolkit:PhoneTextBox">
                                    <Grid x:Name="RootGrid" Background="Transparent">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="FocusStates">
                                                <VisualState x:Name="Focused">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                                         Storyboard.TargetName="HintBorder"
                                                                         Duration="0:0:0.7"
                                                                         To="0.65">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBox.Foreground).(SolidColorBrush.Opacity)"
                                                                         Storyboard.TargetName="Text"
                                                                         Duration="0:0:0.7"
                                                                         To="0.55">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Margin"
                                                                                       Storyboard.TargetName="HintBorder">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0,0,0,-50" />
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Unfocused">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                                         Storyboard.TargetName="HintBorder"
                                                                         Duration="0:0:1"
                                                                         To="0.45">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="(TextBox.Foreground).(SolidColorBrush.Opacity)"
                                                                         Storyboard.TargetName="Text"
                                                                         Duration="0:0:0.7"
                                                                         To="0.1">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Border x:Name="HintBorder" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                Margin="0">
                                            <Grid>
                                                <ContentControl x:Name="HintContent" 
                                                                Background="Transparent" 
                                                                Content="{TemplateBinding Hint}" 
                                                                HorizontalAlignment="Left"
                                                                Margin="8,3" 
                                                                Style="{TemplateBinding HintStyle}" 
                                                                Visibility="{TemplateBinding ActualHintVisibility}" 
                                                                VerticalAlignment="Center"/>
                                                <ContentControl x:Name="ContentElement"
                                                                BorderThickness="0" 
                                                                HorizontalContentAlignment="Stretch" 
                                                                Margin="{StaticResource PhoneTextBoxInnerMargin}" 
                                                                Padding="{TemplateBinding Padding}" 
                                                                VerticalContentAlignment="Stretch"/>
                                            </Grid>
                                        </Border>
                                        <Border x:Name="TextBorder"
                                                BorderBrush="{StaticResource PhoneDisabledBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="Transparent" 
                                                Margin="{StaticResource PhoneTouchTargetOverhang}" 
                                                Visibility="Collapsed">
                                            <TextBox x:Name="Text" 
                                                     Foreground="{StaticResource PhoneDisabledBrush}"
                                                     FontWeight="{TemplateBinding FontWeight}"
                                                     FontStyle="{TemplateBinding FontStyle}" 
                                                     FontSize="{TemplateBinding FontSize}" 
                                                     FontFamily="{TemplateBinding FontFamily}"
                                                     HorizontalAlignment="Left" 
                                                     SelectionForeground="{TemplateBinding SelectionForeground}"
                                                     SelectionBackground="{TemplateBinding SelectionBackground}"
                                                     TextAlignment="{TemplateBinding TextAlignment}" 
                                                     TextWrapping="{TemplateBinding TextWrapping}" 
                                                     Text="{TemplateBinding Text}"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </toolkit:PhoneTextBox.Resources>
                <toolkit:PhoneTextBox.Style>
                    <StaticResource ResourceKey="QuickAddTextBoxStyle"/>
                </toolkit:PhoneTextBox.Style>
            </toolkit:PhoneTextBox>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>
 