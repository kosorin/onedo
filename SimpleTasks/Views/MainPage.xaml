<controls:BasePage x:Class="SimpleTasks.Views.MainPage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                   xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:sys="clr-namespace:System;assembly=mscorlib"
                   xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                   xmlns:controls="clr-namespace:SimpleTasks.Controls"
                   Style="{StaticResource BasePageStyle}"
                   mc:Ignorable="d">

    <controls:BasePage.Resources>
        <!--List Header-->
        <DataTemplate x:Key="TasksLongListSelectorGroupHeaderTemmplate">
            <Grid Height="50"
                  toolkit:TiltEffect.SuppressTilt="True">
                <Grid.Background>
                    <SolidColorBrush Color="{StaticResource TasksListHeaderBackgroundColor}" />
                </Grid.Background>
                <!--<Border>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="24,24"
                                             MappingMode="Absolute"
                                             SpreadMethod="Repeat">
                            <GradientStop Color="{StaticResource TasksListHeaderGradientColor}"
                                          Offset="0" />
                            <GradientStop Color="{StaticResource TasksListHeaderGradientColor}"
                                          Offset="0.5" />
                            <GradientStop Color="Transparent"
                                          Offset="0.5" />
                            <GradientStop Color="Transparent"
                                          Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>-->
                <TextBlock Style="{StaticResource NormalTextStyle}"
                           Opacity="0.75"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0">
                    <Run Text="{Binding Title, Converter={StaticResource StringFunctionConverter}, ConverterParameter='ToUpper'}" />
                    <Run Text="{Binding Count, StringFormat='({0})'}"
                         Foreground="{StaticResource SlightBrush}" />
                </TextBlock>
                <Border BorderThickness="0,1,0,2"
                        BorderBrush="{StaticResource TasksListHeaderBorderBrush}" />
            </Grid>
        </DataTemplate>

        <!--List Task-->
        <DataTemplate x:Key="TasksLongListSelectorItemTemplate">
            <Border x:Name="RootBorder"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource TasksListDelimiterBrush}">
                <Border.RenderTransform>
                    <TranslateTransform />
                </Border.RenderTransform>
                <Border.Resources>
                    <Storyboard x:Key="ResetTranslate">
                        <DoubleAnimation Storyboard.TargetName="RootBorder"
                                         Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.X)"
                                         To="0"
                                         Duration="0:0:0.4">
                            <DoubleAnimation.EasingFunction>
                                <CircleEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </Border.Resources>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"
                                          MinWidth="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Info + Podúkoly-->
                    <controls:ToggleControl Grid.Column="1"
                                            IsChecked="{Binding IsActive}">
                        <StackPanel>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TaskInfoStackPanel"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0"
                                                                        Value="Visible" />
                                            </ObjectAnimationUsingKeyFrames>

                                            <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             BeginTime="0:0:0.15"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TaskInfoTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="0"
                                                             BeginTime="0:0:0.15"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                                             Storyboard.TargetProperty="MaxHeight"
                                                             To="71"
                                                             Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <DoubleAnimation Storyboard.TargetName="TaskPriorityGrid"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SubtasksStackPanel"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TaskInfoStackPanel"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.5"
                                                                        Value="Collapsed" />
                                            </ObjectAnimationUsingKeyFrames>

                                            <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TaskInfoTransform"
                                                             Storyboard.TargetProperty="Y"
                                                             To="-15"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuinticEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                                             Storyboard.TargetProperty="MaxHeight"
                                                             To="0"
                                                             Duration="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <DoubleAnimation Storyboard.TargetName="TaskPriorityGrid"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.45"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SubtasksStackPanel"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.45"
                                                             Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <!--Horní + spodní Info-->
                            <Button>
                                <Button.Template>
                                    <ControlTemplate TargetType="ButtonBase" />
                                </Button.Template>

                                <Grid Background="Transparent"
                                      Tap="TaskListItem_Tap"
                                      ManipulationStarted="InfoGrid_ManipulationStarted"
                                      ManipulationCompleted="InfoGrid_ManipulationCompleted"
                                      ManipulationDelta="InfoGrid_ManipulationDelta">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--Horní info-->
                                    <StackPanel Orientation="Horizontal"
                                                Height="70">

                                        <!--Vysoká/nízká priorita-->
                                        <Grid x:Name="TaskPriorityGrid">

                                            <!--Vysoká priorita-->
                                            <Border Visibility="{Binding IsHighPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ContentControl Style="{StaticResource HighPriorityIconStyle}"
                                                                Foreground="{StaticResource PhoneAccentBrush}"
                                                                Opacity="1"
                                                                Margin="-5,0,-16,50"
                                                                MaxHeight="0">
                                                </ContentControl>
                                            </Border>

                                            <!--Nízká priorita-->
                                            <Border Visibility="{Binding IsLowPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ContentControl Style="{StaticResource LowPriorityIconStyle}"
                                                                Foreground="{StaticResource SubtleBrush}"
                                                                Opacity=".6"
                                                                Margin="-5,0,-16,40"
                                                                MaxHeight="0"
                                                                RenderTransformOrigin="0.5,0.5">
                                                    <ContentControl.RenderTransform>
                                                        <CompositeTransform ScaleX="0.8"
                                                                            ScaleY="0.8" />
                                                    </ContentControl.RenderTransform>
                                                </ContentControl>
                                            </Border>
                                        </Grid>

                                        <!--Název-->
                                        <controls:ToggleControl IsChecked="{Binding IsCompleted}"
                                                                Content="{Binding Title}"
                                                                Style="{StaticResource CheckboxTextStyle}"
                                                                IsHitTestVisible="False"
                                                                FontSize="32"
                                                                Margin="8,0,0,4" />
                                    </StackPanel>

                                    <!--Spodní info-->
                                    <StackPanel x:Name="TaskInfoStackPanel"
                                                Orientation="Vertical"
                                                Grid.Row="1"
                                                Margin="0,-15,0,0"
                                                MaxHeight="71"
                                                RenderTransformOrigin="0.5,0.5">
                                        <StackPanel.RenderTransform>
                                            <TranslateTransform x:Name="TaskInfoTransform"
                                                                Y="0" />
                                        </StackPanel.RenderTransform>

                                        <!--Datum & připomenutí-->
                                        <Grid x:Name="MoreInfo"
                                              MaxHeight="32"
                                              Margin="0,0,0,10">
                                            <StackPanel Orientation="Horizontal">

                                                <!--Datum-->
                                                <StackPanel Orientation="Horizontal"
                                                            Visibility="{Binding HasDueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <ContentControl Style="{StaticResource CalendarIconStyle}"
                                                                    Foreground="{StaticResource PhoneAccentBrush}"
                                                                    Margin="6,0,-18,0"
                                                                    VerticalAlignment="Bottom"
                                                                    MaxHeight="0">
                                                        <ContentControl.RenderTransform>
                                                            <CompositeTransform ScaleX="0.55"
                                                                                ScaleY="0.55"
                                                                                TranslateX="0"
                                                                                TranslateY="-29" />
                                                        </ContentControl.RenderTransform>
                                                    </ContentControl>
                                                    <TextBlock Text="{Binding DueDate, Converter={StaticResource TaskToDueStringConverter}}"
                                                               Style="{StaticResource SlightTextStyle}"
                                                               FontSize="22"
                                                               Margin="0,1,8,0"
                                                               VerticalAlignment="Bottom" />
                                                </StackPanel>

                                                <!--Připomenutí-->
                                                <controls:ToggleControl IsChecked="{Binding Wrapper.IsScheduled}">
                                                    <controls:ToggleControl.Template>
                                                        <ControlTemplate>
                                                            <StackPanel Orientation="Horizontal"
                                                                        Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <VisualStateManager.VisualStateGroups>
                                                                    <VisualStateGroup x:Name="CheckStates">
                                                                        <VisualState x:Name="Checked">
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetName="Color"
                                                                                                Storyboard.TargetProperty="Color"
                                                                                                To="{StaticResource PhoneAccentColor}"
                                                                                                Duration="0:0:0.25" />
                                                                                <DoubleAnimation Storyboard.TargetName="CrossIcon"
                                                                                                 Storyboard.TargetProperty="Opacity"
                                                                                                 To="0"
                                                                                                 Duration="0:0:0.25" />
                                                                            </Storyboard>
                                                                        </VisualState>
                                                                        <VisualState x:Name="Unchecked">
                                                                            <Storyboard>
                                                                                <ColorAnimation Storyboard.TargetName="Color"
                                                                                                Storyboard.TargetProperty="Color"
                                                                                                To="{StaticResource SubtleColor}"
                                                                                                Duration="0:0:0.25" />
                                                                                <DoubleAnimation Storyboard.TargetName="CrossIcon"
                                                                                                 Storyboard.TargetProperty="Opacity"
                                                                                                 To="1"
                                                                                                 Duration="0:0:0.25" />
                                                                            </Storyboard>
                                                                        </VisualState>
                                                                    </VisualStateGroup>
                                                                </VisualStateManager.VisualStateGroups>

                                                                <!--Ikona-->
                                                                <Grid VerticalAlignment="Bottom">
                                                                    <ContentControl Style="{StaticResource ReminderIconStyle}"
                                                                                    Margin="6,0,-18,0"
                                                                                    MaxHeight="0">
                                                                        <ContentControl.Foreground>
                                                                            <SolidColorBrush x:Name="Color"
                                                                                             Color="{StaticResource PhoneAccentColor}" />
                                                                        </ContentControl.Foreground>
                                                                        <ContentControl.RenderTransform>
                                                                            <CompositeTransform ScaleX="0.55"
                                                                                                ScaleY="0.55"
                                                                                                TranslateX="1"
                                                                                                TranslateY="-28" />
                                                                        </ContentControl.RenderTransform>
                                                                    </ContentControl>
                                                                    <ContentControl x:Name="CrossIcon"
                                                                                    Style="{StaticResource BoldCloseIconStyle}"
                                                                                    Foreground="{StaticResource PhoneAccentBrush}"
                                                                                    Height="0"
                                                                                    Width="0">
                                                                        <ContentControl.RenderTransform>
                                                                            <CompositeTransform ScaleX="0.4"
                                                                                                ScaleY="0.4"
                                                                                                TranslateX="0"
                                                                                                TranslateY="-15" />
                                                                        </ContentControl.RenderTransform>
                                                                    </ContentControl>
                                                                </Grid>

                                                                <!--Text-->
                                                                <TextBlock Text="{Binding Reminder, Converter={StaticResource ReminderConverter}}"
                                                                           Style="{StaticResource SlightTextStyle}"
                                                                           VerticalAlignment="Bottom"
                                                                           FontSize="22"
                                                                           Margin="0,1,8,0" />

                                                            </StackPanel>
                                                        </ControlTemplate>
                                                    </controls:ToggleControl.Template>
                                                </controls:ToggleControl>

                                            </StackPanel>
                                        </Grid>

                                        <!--Detail-->
                                        <Grid x:Name="DetailWrapper"
                                              MaxHeight="30"
                                              Margin="0,-10,12,10"
                                              Visibility="{Binding Detail, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Detail}"
                                                       Style="{StaticResource SlightTextStyle}"
                                                       FontSize="22"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="WordEllipsis"
                                                       Opacity="0.8"
                                                       Margin="8,0,20,0" />
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Button>

                            <!--Podúkoly-->
                            <StackPanel x:Name="SubtasksStackPanel"
                                        Margin="3,-5,0,10"
                                        Visibility="{Binding Subtasks.Count, Converter={StaticResource IntegerToVisibilityConverter}, ConverterParameter='!0'}">
                                <ItemsControl ItemsSource="{Binding Subtasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="RootBorder"
                                                    ManipulationStarted="SubtaskBorder_ManipulationStarted"
                                                    ManipulationCompleted="SubtaskBorder_ManipulationCompleted"
                                                    ManipulationDelta="SubtaskBorder_ManipulationDelta"
                                                    Background="Transparent">
                                                <Border.Resources>
                                                    <Storyboard x:Key="ResetTranslate">
                                                        <DoubleAnimation Storyboard.TargetName="RootBorder"
                                                                         Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.X)"
                                                                         To="0"
                                                                         Duration="0:0:0.4">
                                                            <DoubleAnimation.EasingFunction>
                                                                <CircleEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </Border.Resources>
                                                <Border.RenderTransform>
                                                    <TranslateTransform />
                                                </Border.RenderTransform>

                                                <Grid Height="50">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="ButtonBase" />
                                                        </Button.Template>

                                                        <Border Background="Transparent"
                                                                Tap="SubtaskCheckbox_Tap">
                                                            <ToggleButton x:Name="Checkbox"
                                                                          IsChecked="{Binding IsCompleted}"
                                                                          Style="{StaticResource CheckboxStyle}"
                                                                          IsHitTestVisible="False" />
                                                        </Border>
                                                    </Button>

                                                    <Button Grid.Column="1">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="ButtonBase" />
                                                        </Button.Template>

                                                        <Border Background="Transparent"
                                                                Tap="SubtaskText_Tap">
                                                            <controls:ToggleControl IsChecked="{Binding IsCompleted}"
                                                                                    Content="{Binding Text}"
                                                                                    Style="{StaticResource CheckboxTextStyle}"
                                                                                    IsHitTestVisible="False"
                                                                                    Margin="5,0,0,0" />
                                                        </Border>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                        </StackPanel>
                    </controls:ToggleControl>

                    <!--Checkbox-->
                    <Button Grid.Column="0"
                            Width="60"
                            Visibility="{Binding Wrapper.CheckBoxVisibility, FallbackValue=Visible}">
                        <Button.Template>
                            <ControlTemplate TargetType="ButtonBase" />
                        </Button.Template>

                        <Border Tap="CompleteButton_Tap"
                                Background="Transparent"
                                VerticalAlignment="Top"
                                Margin="10,10,0,0"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left">
                            <ToggleButton x:Name="Checkbox"
                                          IsChecked="{Binding IsCompleted}"
                                          Style="{StaticResource CheckboxStyle}"
                                          IsHitTestVisible="False" />
                        </Border>
                    </Button>

                    <!--Gesture Complete icon-->
                    <ContentControl Grid.ColumnSpan="2"
                                    x:Name="CompleteGestureIcon"
                                    Margin="-105"
                                    Grid.Column="1"
                                    Style="{StaticResource CompleteIconStyle}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right" />
                </Grid>
            </Border>
        </DataTemplate>
    </controls:BasePage.Resources>

    <Grid x:Name="TasksRoot"
          Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Úkoly-->
        <Grid x:Name="ContentPanel"
              Grid.Row="1">
            <phone:LongListSelector x:Name="TasksLongListSelector"
                                    LayoutMode="List"
                                    ItemsSource="{Binding GroupedTasks}"
                                    GroupHeaderTemplate="{StaticResource TasksLongListSelectorGroupHeaderTemmplate}"
                                    ItemTemplate="{StaticResource TasksLongListSelectorItemTemplate}"
                                    IsGroupingEnabled="True"
                                    HideEmptyGroups="True">
                <phone:LongListSelector.Template>
                    <ControlTemplate TargetType="phone:LongListSelector">
                        <Grid Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="ScrollStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="00:00:00.5" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Scrolling">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0"
                                                             To="1"
                                                             Storyboard.TargetProperty="Opacity"
                                                             Storyboard.TargetName="VerticalScrollBar" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="NotScrolling" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <ViewportControl x:Name="ViewportControl"
                                                 HorizontalContentAlignment="Stretch"
                                                 VerticalAlignment="Top"
                                                 Padding="0,0,0,10" />
                                <ScrollBar x:Name="VerticalScrollBar"
                                           Grid.Column="1"
                                           Margin="-10,0,0,0"
                                           Opacity="0"
                                           Orientation="Vertical" />
                            </Grid>
                        </Grid>
                    </ControlTemplate>

                </phone:LongListSelector.Template>
            </phone:LongListSelector>

            <!--No tasks-->
            <StackPanel x:Name="NoTasksPanel"
                        Visibility="{Binding Tasks.Count, Converter={StaticResource IntegerToVisibilityConverter}, ConverterParameter=0}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">

                <!--Ikona-->
                <ContentControl Style="{StaticResource CheckIconStyle}"
                                Foreground="{StaticResource SubtleBrush}"
                                Opacity="0.8"
                                RenderTransformOrigin="0.5,0.5"
                                Margin="0,0,0,30">
                    <ContentControl.RenderTransform>
                        <CompositeTransform ScaleX="3"
                                            ScaleY="3" />
                    </ContentControl.RenderTransform>
                </ContentControl>

                <!--Hlavní text-->
                <TextBlock Text="{Binding LocalizedResources.NoTasks, Source={StaticResource LocalizedStrings}}"
                           Style="{StaticResource SlightTextStyle}"
                           FontSize="32"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="12,0" />

                <!--Vedlejší text - nápověda-->
                <TextBlock Style="{StaticResource SubtleTextStyle}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Margin="12,10,12,0"
                           TextAlignment="Center">
                    <Run Text="{Binding LocalizedResources.NoTasksHelpStart, Source={StaticResource LocalizedStrings}}" />
                    <Run Text="  &#xe17e;&#xe109;  "
                         FontSize="20"
                         FontFamily="Segoe UI Symbol" />
                    <Run Text="{Binding LocalizedResources.NoTasksHelpEnd, Source={StaticResource LocalizedStrings}}" />
                </TextBlock>

            </StackPanel>
        </Grid>

        <!--Overlay úkolů-->
        <Rectangle x:Name="PageOverlay"
                   Grid.RowSpan="2"
                   Fill="{StaticResource BackgroundBrush}"
                   Opacity="0"
                   Visibility="Collapsed">
            <Rectangle.Resources>

                <!--Task List-->
                <Storyboard x:Name="PageOverlayTransitionShow">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.25"
                                     BeginTime="0:0:0.25"
                                     To="1">
                    </DoubleAnimation>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PageOverlay"
                                                   Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0"
                                                Value="Visible" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionHide">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.25"
                                     To="0">
                    </DoubleAnimation>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PageOverlay"
                                                   Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0.25"
                                                Value="Collapsed" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>

                <!--Quick Add-->
                <Storyboard x:Name="PageOverlayTransitionQuickShow">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.4"
                                     To="0.58">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PageOverlay"
                                                   Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0"
                                                Value="Visible" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionQuickHide">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.3"
                                     BeginTime="0:0:0.2"
                                     To="0">
                    </DoubleAnimation>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PageOverlay"
                                                   Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0:0:0.5"
                                                Value="Collapsed" />
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>

            </Rectangle.Resources>
        </Rectangle>

        <!--Oddělovač-->
        <Rectangle Grid.Row="1"
                   Fill="{StaticResource PhoneAccentBrush}"
                   Opacity="0.6"
                   Height="10"
                   VerticalAlignment="Bottom" />

        <!--Quick add-->
        <Grid Grid.Row="2">
            <controls:MyTextBox Grid.Row="1"
                                x:Name="QuickAddTextBox"
                                Hint="{Binding LocalizedResources.QuickAddLabel, Source={StaticResource LocalizedStrings}, StringFormat='\{0}&#8230;&#xe104;'}"
                                GotFocus="QuickAddTextBox_GotFocus"
                                LostFocus="QuickAddTextBox_LostFocus"
                                KeyDown="QuickAddTextBox_KeyDown"
                                BorderSize="0"
                                FontSize="30"
                                FontFamily="Segoe UI Symbol"
                                Background="{StaticResource QuickAddBackgroundBrush}"
                                Height="65" />
        </Grid>
    </Grid>

</controls:BasePage>
 