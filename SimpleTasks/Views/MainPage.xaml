<phone:PhoneApplicationPage
    x:Class="SimpleTasks.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:controls="clr-namespace:SimpleTasks.Controls"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    d:DataContext="{d:DesignData ../SampleData/MainSampleData.xaml}"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True"
    shell:SystemTray.BackgroundColor="{StaticResource PhoneChromeColor}"
    toolkit:TiltEffect.IsTiltEnabled="True">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <phone:PhoneApplicationPage.Resources>
        <SolidColorBrush x:Key="TasksLongListSelectorBackgroundBrush" 
                         Color="{StaticResource PhoneSubtleColor}" 
                         Opacity="0.2"/>

        <DataTemplate x:Key="TasksLongListSelectorGroupHeaderTemmplate">
            <Border Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                    Margin="0,-1,0,0"
                    toolkit:TiltEffect.SuppressTilt="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{StaticResource PhoneAccentBrush}"
                            Padding="12,2,12,2"
                            HorizontalAlignment="Right"
                            Grid.Column="1">
                        <TextBlock Text="{Binding Title}" 
                                   Foreground="{StaticResource PhoneForegroundBrush}" 
                                   FontSize="24"
                                   Padding="6"
                                   FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                            Margin="0,40,0,0"
                            Grid.ColumnSpan="2"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TasksLongListSelectorItemTemplate">
            <Border BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource TasksLongListSelectorBackgroundBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Title}"
                               Style="{StaticResource ButtonTextBlockStyle}"
                               Opacity="0.85"
                               Padding="20,12,0,12"
                               TextWrapping="Wrap"
                               FontWeight="Light"/>
                    <StackPanel Orientation="Horizontal"
                                Grid.Column="1" 
                                VerticalAlignment="Top" 
                                Margin="0,2,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Visibility="{Binding IsComplete, Converter={StaticResource BooleanNegationToVisibilityConverter}}">
                            <Border Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <controls:Icon Style="{StaticResource ReminderIconStyle}"
                                               Color="{StaticResource PhoneAccentBrush}"/>
                            </Border>
                            <ToggleButton Visibility="{Binding Priority, Mode=OneTime,
                                                       Converter={StaticResource TaskPriorityToVisibilityConverter}}"
                                          IsChecked="{Binding Priority, Mode=OneTime,
                                                      Converter={StaticResource TaskPriorityToBooleanConverter}}">
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CheckStates">
                                                    <VisualState x:Name="Checked">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="HighPriorityIcon" 
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             Duration="0"
                                                                             To="1" />
                                                            <DoubleAnimation Storyboard.TargetName="LowPriorityIcon" 
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             Duration="0"
                                                                             To="0"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Unchecked">
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="HighPriorityIcon" 
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             Duration="0"
                                                                             To="0" />
                                                            <DoubleAnimation Storyboard.TargetName="LowPriorityIcon" 
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             Duration="0"
                                                                             To="0.2"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <controls:Icon x:Name="HighPriorityIcon"
                                                           Opacity="0"
                                                           Style="{StaticResource HighPriorityIconStyle}"
                                                           Color="{StaticResource PhoneAccentBrush}"/>
                                            <controls:Icon x:Name="LowPriorityIcon"
                                                           Opacity="0"
                                                           Style="{StaticResource LowPriorityIconStyle}"
                                                           Color="{StaticResource PhoneForegroundBrush}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </StackPanel>
                        <Border Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <controls:Icon Style="{StaticResource CheckIconStyle}"
                                           Color="{StaticResource PhoneForegroundBrush}"
                                           Opacity="0.2"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot" 
          Background="{StaticResource ApplicationBackgroundBrush}">
        <Grid x:Name="ContentPanel">
            <phone:LongListSelector x:Name="TasksLongListSelector"
                                    LayoutMode="List"
                                    ItemsSource="{Binding GroupedTasks}"
                                    GroupHeaderTemplate="{StaticResource TasksLongListSelectorGroupHeaderTemmplate}"
                                    ItemTemplate="{StaticResource TasksLongListSelectorItemTemplate}"
                                    IsGroupingEnabled="True"
                                    HideEmptyGroups="True"
                                    SelectionChanged="TasksLongListSelector_SelectionChanged"
                                    Loaded="TasksLongListSelector_Loaded" />

            <TextBlock Text="{Binding LocalizedResources.NoTasks, Source={StaticResource LocalizedStrings}}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Style="{StaticResource PhoneTextLargeStyle}"
                       Foreground="{StaticResource PhoneSubtleBrush}"
                       Visibility="{Binding Tasks.Count, 
                                            Converter={StaticResource IntegerToVisibilityConverter}, 
                                            ConverterParameter=0}"
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>
        </Grid>
    </Grid>

</phone:PhoneApplicationPage>