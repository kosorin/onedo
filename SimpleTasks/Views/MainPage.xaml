<phone:PhoneApplicationPage
    x:Class="SimpleTasks.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:controls="clr-namespace:SimpleTasks.Controls"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    d:DataContext="{d:DesignData ../SampleData/MainSampleData.xaml}"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True"
    shell:SystemTray.BackgroundColor="{StaticResource PhoneChromeColor}"
    toolkit:TiltEffect.IsTiltEnabled="True">

    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeIn" />
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeIn" />
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:SlideTransition Mode="SlideDownFadeOut" />
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:SlideTransition Mode="SlideUpFadeOut" />
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>

    <phone:PhoneApplicationPage.Resources>
        <SolidColorBrush x:Key="TasksLongListSelectorBackgroundBrush" 
                         Color="{StaticResource PhoneSubtleColor}" 
                         Opacity="0.2"/>

        <Style x:Key="TextBlockInfo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Margin" Value="0,1,8,0" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Foreground" Value="{StaticResource PhoneSubtleBrush}" />
        </Style>

        <DataTemplate x:Key="TasksLongListSelectorGroupHeaderTemmplate">
            <Grid Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                  Margin="0,0,0,0"
                  Height="50"
                  toolkit:TiltEffect.SuppressTilt="True">
                <Border Background="{StaticResource PhoneAccentBrush}"
                        Padding="10,0,10,5"
                        HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Title}" 
                               Foreground="{StaticResource PhoneForegroundBrush}" 
                               FontSize="24"
                               FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                               VerticalAlignment="Center"/>
                </Border>
                <Border Background="{StaticResource TasksLongListSelectorBackgroundBrush}"
                        Height="10"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </DataTemplate>

        <Style x:Key="TaskMenuItemBorderStyle" TargetType="Border">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Margin" Value="5,0" />
        </Style>
        <Style x:Key="TaskMenuItemIconStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="32" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style x:Key="TaskMenuItemTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Segoe WP"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="FontSize" Value="22" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,15,0,0" />
        </Style>
        
        <ControlTemplate x:Key="TaskMenuTemplate" TargetType="toolkit:ContextMenu">
            <StackPanel x:Name="OuterPanel">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="VisibilityStates">
                        <VisualState x:Name="Open">
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleX">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleY">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:.3" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:.42" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border1Reversed" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border2Reversed" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="OpenReversed">
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleX">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleY">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.42" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1Reversed" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2Reversed" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border1" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border2" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="OpenLandscape">
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleY">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleX">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.42" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border1Reversed" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border2Reversed" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="OpenLandscapeReversed">
                            <Storyboard>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleY">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleX">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.42" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>

                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1Reversed" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2Reversed" Storyboard.TargetProperty="Opacity" To="1"/>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border1" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Duration="0:0:0.42" Storyboard.TargetName="Border2" Storyboard.TargetProperty="Opacity">
                                    <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4099" Value="0"/>
                                    <LinearDoubleKeyFrame KeyTime="0:0:0.41" Value="1"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Closed">
                            <Storyboard>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleX" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="ScaleX" Storyboard.TargetProperty="ScaleY" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleY" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="ScaleY" Storyboard.TargetProperty="ScaleX" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1" Storyboard.TargetProperty="Opacity" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2" Storyboard.TargetProperty="Opacity" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border1Reversed" Storyboard.TargetProperty="Opacity" To="0"/>
                                <DoubleAnimation Duration="0" Storyboard.TargetName="Border2Reversed" Storyboard.TargetProperty="Opacity" To="0"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <StackPanel.RenderTransform>
                    <ScaleTransform x:Name="ScaleX"/>
                </StackPanel.RenderTransform>

                <Rectangle MinWidth="2" MinHeight="2" Fill="{TemplateBinding BorderBrush}" x:Name="Border1"/>
                <Rectangle MinWidth="2" MinHeight="2" Fill="{TemplateBinding Background}" x:Name="Border2"/>
                <Grid x:Name="InnerGrid" Background="{TemplateBinding Background}">
                    <Grid.RenderTransform>
                        <ScaleTransform x:Name="ScaleY"/>
                    </Grid.RenderTransform>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,20" Grid.Row="1" HorizontalAlignment="Center">
                        <Border Style="{StaticResource TaskMenuItemBorderStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource TaskMenuItemIconStyle}" Text="&#xe17e;&#xe1fd;"/>
                                <TextBlock Style="{StaticResource TaskMenuItemTextStyle}" Text="today" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource TaskMenuItemBorderStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource TaskMenuItemIconStyle}" Text="&#xe17e;&#xe1cc;"  />
                                <TextBlock Style="{StaticResource TaskMenuItemTextStyle}" Text="tomorrow"  />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource TaskMenuItemBorderStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource TaskMenuItemIconStyle}" Text="&#xe17e;&#xe111;"  />
                                <TextBlock Style="{StaticResource TaskMenuItemTextStyle}" Text="next week" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource TaskMenuItemBorderStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource TaskMenuItemIconStyle}" Text="&#xe17e;&#xe143;"  />
                                <TextBlock Style="{StaticResource TaskMenuItemTextStyle}" Text="someday" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
                <Rectangle MinWidth="2" MinHeight="2" Fill="{TemplateBinding Background}" x:Name="Border1Reversed"/>
                <Rectangle MinWidth="2" MinHeight="2" Fill="{TemplateBinding BorderBrush}" x:Name="Border2Reversed"/>
            </StackPanel>
        </ControlTemplate>

        <DataTemplate x:Key="TasksLongListSelectorItemTemplate">
            <Border x:Name="RootBorder"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource TasksLongListSelectorBackgroundBrush}">
                <Border.Resources>
                    <Storyboard x:Name="TaskInfoShow">
                        <!--Popis-->
                        <!--<DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Height"
                                         To="{Binding Height}"
                                         Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseIn" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="(StackPanel.Projection).(PlaneProjection.RotationX)"
                                         To="0"
                                         Duration="0:0:0.3"/>-->
                        <DoubleAnimation Storyboard.TargetName="TaskTitleAndPriority"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1.0"
                                         Duration="0:0:0.35">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="0:0:0.35">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <!--Tlačítko-->
                        <DoubleAnimation Duration="0:0:0.4"
                                         To="0"
                                         Storyboard.TargetProperty="Opacity" 
                                         Storyboard.TargetName="CompleteIcon" />
                        <ColorAnimation Duration="0:0:0.4"
                                        To="{StaticResource PhoneAccentColor}"
                                        Storyboard.TargetProperty="(Rectangle.Stroke).(SolidColorBrush.Color)" 
                                        Storyboard.TargetName="CompleteButtonRectangle" />
                    </Storyboard>
                    <Storyboard x:Name="TaskInfoHide">
                        <!--Popis-->
                        <!--<DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Height"
                                         To="0"
                                         Duration="0:0:0.2">
                            <DoubleAnimation.EasingFunction>
                                <QuadraticEase EasingMode="EaseIn" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="(StackPanel.Projection).(PlaneProjection.RotationX)"
                                         To="90"
                                         Duration="0:0:0.3"/>-->
                        <DoubleAnimation Storyboard.TargetName="TaskTitleAndPriority"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.45"
                                         Duration="0:0:0.35">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseIn" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.45"
                                         Duration="0:0:0.35">
                            <DoubleAnimation.EasingFunction>
                                <ExponentialEase EasingMode="EaseIn" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <!--Tlačítko-->
                        <DoubleAnimation Duration="0:0:0.4"
                                         To="1"
                                         Storyboard.TargetProperty="Opacity" 
                                         Storyboard.TargetName="CompleteIcon" />
                        <ColorAnimation Duration="0:0:0.4"
                                        To="{StaticResource PhoneSubtleColor}"
                                        Storyboard.TargetProperty="(Rectangle.Stroke).(SolidColorBrush.Color)" 
                                        Storyboard.TargetName="CompleteButtonRectangle" />
                    </Storyboard>
                </Border.Resources>
                <toolkit:ContextMenuService.ContextMenu>
                    <toolkit:ContextMenu Template="{StaticResource TaskMenuTemplate}" />
                </toolkit:ContextMenuService.ContextMenu>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <!--Check Box-->
                    <Border Margin="12,15,2,0"
                            Tap="Border_Tap" >
                        <Grid Width="40"
                              Height="40"
                              VerticalAlignment="Top">
                            <Rectangle x:Name="CompleteButtonRectangle" >
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{StaticResource PhoneSubtleColor}"
                                                     Opacity="0.24"/>
                                </Rectangle.Fill>
                                <Rectangle.Stroke>
                                    <SolidColorBrush Color="{StaticResource PhoneSubtleColor}"
                                                     Opacity="0.8"/>
                                </Rectangle.Stroke>
                            </Rectangle>
                            <ContentControl x:Name="CompleteIcon"
                                           Style="{StaticResource CheckIconStyle}"
                                           Foreground="{StaticResource PhoneSubtleBrush}"
                                           Opacity="{Binding Task.IsComplete, Converter={StaticResource BooleanToNumberConverter}, Mode=OneTime}"
                                           MaxHeight="0"
                                           MaxWidth="0">
                                <ContentControl.RenderTransform>
                                    <CompositeTransform ScaleX="0.75" ScaleY="0.75" TranslateY="-18" TranslateX="-18" />
                                </ContentControl.RenderTransform>
                            </ContentControl>
                        </Grid>
                    </Border>
                    
                    <!--Info-->
                    <Grid Grid.Column="1"
                          Tap="Grid_Tap"
                          Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--Horní info-->
                        <StackPanel x:Name="TaskTitleAndPriority" Orientation="Horizontal">

                            <!--Vysoká priorita-->
                            <Border Visibility="{Binding Task.IsHighPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ContentControl Style="{StaticResource HighPriorityIconStyle}"
                                               Foreground="{StaticResource PhoneAccentBrush}"
                                               Opacity="1"
                                               Margin="-5,0,-16,50"
                                               MaxHeight="0">
                                </ContentControl>
                            </Border>

                            <!--Nízká priorita-->
                            <Border Visibility="{Binding Task.IsLowPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ContentControl Style="{StaticResource LowPriorityIconStyle}"
                                               Foreground="{StaticResource PhoneDisabledBrush}"
                                               Opacity=".6"
                                               Margin="-5,0,-16,40"
                                               MaxHeight="0"
                                               RenderTransformOrigin="0.5,0.5">
                                    <ContentControl.RenderTransform>
                                        <CompositeTransform ScaleX="0.8" ScaleY="0.8" />
                                    </ContentControl.RenderTransform>
                                </ContentControl>
                            </Border>

                            <!--Název-->
                            <TextBlock x:Name="TitleTextBox"
                                       Text="{Binding Task.Title}"
                                       Style="{StaticResource ButtonTextStyle}"
                                       Margin="8,10,0,15"/>

                        </StackPanel>

                        <!--Spodní info-->
                        <StackPanel x:Name="TaskInfoStackPanel" 
                                    Orientation="Vertical"
                                    Grid.Row="1"
                                    Margin="0,-15,0,0"
                                    RenderTransformOrigin="0.5,0"
                                    Loaded="TaskInfoStackPanel_Loaded">
                            <StackPanel.RenderTransform>
                                <CompositeTransform/>
                            </StackPanel.RenderTransform>
                            <StackPanel.Projection>
                                <PlaneProjection RotationX="0" CenterOfRotationY="0"/>
                            </StackPanel.Projection>

                            <!--Datum+připomenutí-->
                            <Grid MaxHeight="32"
                                  x:Name="TaskInfoMoreInfo"
                                  Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">

                                    <!--Datum-->
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding Task.HasDueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ContentControl Style="{StaticResource CalendarIconStyle}"
                                                       Foreground="{StaticResource PhoneAccentBrush}"
                                                       Margin="6,0,-18,26"
                                                       MaxHeight="0">
                                            <ContentControl.RenderTransform>
                                                <CompositeTransform ScaleX="0.55" ScaleY="0.55"/>
                                            </ContentControl.RenderTransform>
                                        </ContentControl>
                                        <TextBlock Style="{StaticResource TextBlockInfo}"
                                                   Text="{Binding Task, Converter={StaticResource TaskToDueDateStringConverter}}"/>
                                    </StackPanel>

                                    <!--Připomenutí-->
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding Task.HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ContentControl Style="{StaticResource ReminderIconStyle}"
                                                       Foreground="{StaticResource PhoneAccentBrush}"
                                                       Margin="6,0,-18,26"
                                                       MaxHeight="0">
                                            <ContentControl.RenderTransform>
                                                <CompositeTransform ScaleX="0.55" ScaleY="0.55" />
                                            </ContentControl.RenderTransform>
                                        </ContentControl>
                                        <TextBlock Style="{StaticResource TextBlockInfo}"
                                                   Text="{Binding Task, Converter={StaticResource TimeSpanToStringConverter}}"/>
                                    </StackPanel>

                                </StackPanel>
                            </Grid>

                            <!--Detail-->
                            <Grid Visibility="{Binding Task.Detail, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"
                                  Margin="0,0,0,10"
                                  x:Name="DetailGridWrapper">
                                <TextBlock Text="{Binding Task.Detail}"
                                           Style="{StaticResource LightTextStyle}"
                                           FontSize="{StaticResource PhoneFontSizeNormal}"
                                           Opacity="0.8"
                                           TextWrapping="Wrap"
                                           Margin="8,0,20,0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="QuickAddTextBoxHintStyle" TargetType="ContentControl">
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            <Setter Property="Foreground" Value="{StaticResource PhoneSubtleBrush}" />
        </Style>

    </phone:PhoneApplicationPage.Resources>

    <Grid x:Name="TasksRoot"
          Background="{StaticResource PageBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"  />
        </Grid.RowDefinitions>
        
        <!--Úkoly-->
        <Grid x:Name="ContentPanel" Grid.Row="1">
            <phone:LongListSelector x:Name="TasksLongListSelector"
                                    LayoutMode="List"
                                    ItemsSource="{Binding GroupedTasks}"
                                    GroupHeaderTemplate="{StaticResource TasksLongListSelectorGroupHeaderTemmplate}"
                                    ItemTemplate="{StaticResource TasksLongListSelectorItemTemplate}"
                                    IsGroupingEnabled="True"
                                    HideEmptyGroups="True"
                                    Loaded="TasksLongListSelector_Loaded"
                                    ItemRealized="TasksLongListSelector_ItemRealized" />

            <TextBlock Text="{Binding LocalizedResources.NoTasks, Source={StaticResource LocalizedStrings}}"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Style="{StaticResource PhoneTextLargeStyle}"
                       Foreground="{StaticResource PhoneSubtleBrush}"
                       Visibility="{Binding Tasks.Count, Converter={StaticResource IntegerToVisibilityConverter}, ConverterParameter=0}"
                       TextWrapping="Wrap" 
                       TextAlignment="Center"/>

            <Rectangle Fill="{StaticResource PhoneAccentBrush}"
                   Opacity="0.6"
                   Height="10" 
                   VerticalAlignment="Bottom"/>
        </Grid>

        <!--Overlay úkolů-->
        <Rectangle x:Name="PageOverlay"
                   Grid.RowSpan="2"
                   Fill="Black"
                   Opacity="0"
                   Visibility="Collapsed">
            <Rectangle.Resources>
                <Storyboard x:Name="PageOverlayTransitionShow">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.4"
                                     BeginTime="0:0:0.4"
                                     To="1">
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionHide">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.4"
                                     To="0">
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionQuickShow">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.4"
                                     To="0.58">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="PageOverlayTransitionQuickHide">
                    <DoubleAnimation Storyboard.TargetName="PageOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     Duration="0:0:0.3"
                                     BeginTime="0:0:0.2"
                                     To="0">
                    </DoubleAnimation>
                </Storyboard>
            </Rectangle.Resources>
        </Rectangle>

        <!--Quick add-->
        <Grid Grid.Row="2">
            <toolkit:PhoneTextBox x:Name="QuickAddTextBox"
                                  Hint="&#8230;&#xe104;"
                                  Height="65"
                                  HintStyle="{StaticResource QuickAddTextBoxHintStyle}" 
                                  LostFocus="QuickAddTextBox_LostFocus" 
                                  GotFocus="QuickAddTextBox_GotFocus">
                <toolkit:PhoneTextBox.Resources>
                    <Style x:Key="QuickAddTextBoxStyle" TargetType="toolkit:PhoneTextBox">
                        <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}"/>
                        <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeLarge}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="{StaticResource PhoneSubtleColor}" 
                                                    Opacity="0.45"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PhoneAccentBrush}"/>
                        <Setter Property="SelectionBackground" Value="{StaticResource PhoneAccentBrush}"/>
                        <Setter Property="SelectionForeground" Value="{StaticResource PhoneTextBoxSelectionForegroundBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="InputScope" Value="Text" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="toolkit:PhoneTextBox">
                                    <Grid x:Name="RootGrid"
                                            Background="Transparent"
                                            Height="{TemplateBinding Height}">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="FocusStates">
                                                <VisualState x:Name="Focused">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                                            Storyboard.TargetName="HintBorder"
                                                                            Duration="0:0:0.7"
                                                                            To="0.65">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                            Storyboard.TargetName="ContentElement"
                                                                            Duration="0:0:0.45"
                                                                            To="0.85">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Unfocused">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                                                            Storyboard.TargetName="HintBorder"
                                                                            Duration="0:0:1"
                                                                            To="0.45">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseOut" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                            Storyboard.TargetName="ContentElement"
                                                                            Duration="0:0:0.45"
                                                                            To="0.4">
                                                            <DoubleAnimation.EasingFunction>
                                                                <PowerEase EasingMode="EaseIn" />
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Border x:Name="HintBorder" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                Margin="0">
                                            <Grid VerticalAlignment="Center">
                                                <ContentControl x:Name="HintContent" 
                                                                Background="Transparent" 
                                                                Content="{TemplateBinding Hint}" 
                                                                HorizontalAlignment="Left"
                                                                Margin="10" 
                                                                Style="{TemplateBinding HintStyle}" 
                                                                Visibility="{TemplateBinding ActualHintVisibility}" 
                                                                VerticalAlignment="Center"/>
                                                <ContentControl x:Name="ContentElement"
                                                                BorderThickness="0" 
                                                                HorizontalContentAlignment="Stretch" 
                                                                Margin="{StaticResource PhoneTextBoxInnerMargin}" 
                                                                Padding="{TemplateBinding Padding}" 
                                                                VerticalContentAlignment="Stretch"/>
                                            </Grid>
                                        </Border>
                                        <Border x:Name="TextBorder"
                                                BorderBrush="{StaticResource PhoneDisabledBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="Transparent" 
                                                Margin="{StaticResource PhoneTouchTargetOverhang}" 
                                                Visibility="Collapsed">
                                            <TextBox x:Name="Text" 
                                                        Foreground="{StaticResource PhoneDisabledBrush}"
                                                        FontWeight="{TemplateBinding FontWeight}"
                                                        FontStyle="{TemplateBinding FontStyle}" 
                                                        FontSize="{TemplateBinding FontSize}" 
                                                        FontFamily="{TemplateBinding FontFamily}"
                                                        HorizontalAlignment="Left" 
                                                        SelectionForeground="{TemplateBinding SelectionForeground}"
                                                        SelectionBackground="{TemplateBinding SelectionBackground}"
                                                        TextAlignment="{TemplateBinding TextAlignment}" 
                                                        TextWrapping="{TemplateBinding TextWrapping}" 
                                                        Text="{TemplateBinding Text}"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </toolkit:PhoneTextBox.Resources>
                <toolkit:PhoneTextBox.Style>
                    <StaticResource ResourceKey="QuickAddTextBoxStyle"/>
                </toolkit:PhoneTextBox.Style>
            </toolkit:PhoneTextBox>
        </Grid>

        <!--Overlay celé stránky-->
        <Rectangle x:Name="TasksPageOverlay"
                    Fill="Black"
                    Opacity="1"
                    Visibility="Collapsed"
                    Grid.RowSpan="3">
            <Rectangle.Resources>
                <Storyboard x:Name="TasksPageOverlayTransitionShow">
                    <DoubleAnimation Storyboard.TargetName="TasksPageOverlay"
                                        Storyboard.TargetProperty="Opacity"
                                        Duration="0:0:1"
                                        To="0.65">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Name="TasksPageOverlayTransitionHide">
                    <DoubleAnimation Storyboard.TargetName="TasksPageOverlay"
                                        Storyboard.TargetProperty="Opacity"
                                        Duration="0:0:1"
                                        To="0">
                        <DoubleAnimation.EasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </Rectangle.Resources>
        </Rectangle>

    </Grid>

</phone:PhoneApplicationPage>
 