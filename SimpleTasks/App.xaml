            <!--Region Button-->
            <Style x:Key="ButtonStyle"
                   TargetType="ButtonBase">
                <Setter Property="Height"
                        Value="50" />
                <Setter Property="Padding"
                        Value="32,0" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="Background"
                        Value="{StaticResource ButtonBackgroundBrush}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ButtonBase">
                            <Border x:Name="Root"
                                    Height="{TemplateBinding Height}"
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="MouseOver" />
                                        <VisualState x:Name="Disabled">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root"
                                                                               Storyboard.TargetProperty="Opacity">
                                                    <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="0.5" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root"
                                                                               Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="{StaticResource AccentBrush}" />
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Text"
                                                                               Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="{StaticResource ButtonDarkForegroundBrush}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <TextBlock x:Name="Text"
                                           Text="{TemplateBinding Content}"
                                           Style="{StaticResource ButtonTextStyle}"
                                           FontSize="24"
                                           HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!--EndRegion-->

            <!--Region Checkbox-->
            <Style x:Key="TaskCheckBoxStyle"
                   TargetType="ToggleButton">
                <Setter Property="Width"
                        Value="40" />
                <Setter Property="Height"
                        Value="40" />
                <Setter Property="BorderBrush"
                        Value="{StaticResource AccentBrush}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid Background="{x:Null}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CheckStates">
                                        <VisualStateGroup.Transitions>
                                            <VisualTransition To="Unchecked"
                                                              GeneratedDuration="0:0:0.25" />
                                            <VisualTransition To="Checked"
                                                              GeneratedDuration="0:0:0.25" />
                                        </VisualStateGroup.Transitions>
                                        <VisualState x:Name="Unchecked" />
                                        <VisualState x:Name="Checked">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="CheckIcon"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 Duration="0"
                                                                 To="1" />
                                                <DoubleAnimation Storyboard.TargetName="CompleteButtonRectangle"
                                                                 Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Opacity)"
                                                                 Duration="0"
                                                                 To="0" />
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Indeterminate" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <!--Checkbox-->
                                <Border Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        Background="{StaticResource CheckBoxBackgroundBrush}"
                                        BorderThickness="2"
                                        BorderBrush="{StaticResource CheckBoxBorderBrush}"
                                        HorizontalAlignment="Left">
                                    <Border x:Name="CompleteButtonRectangle"
                                            Margin="-2"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="2">
                                        <ContentControl x:Name="CheckIcon"
                                                        Style="{StaticResource CheckIconStyle}"
                                                        Foreground="{StaticResource SubtleBrush}"
                                                        Opacity="0"
                                                        MaxWidth="0"
                                                        MaxHeight="0">
                                            <ContentControl.RenderTransform>
                                                <CompositeTransform ScaleX="0.75"
                                                                    ScaleY="0.75"
                                                                    TranslateY="-18"
                                                                    TranslateX="-18" />
                                            </ContentControl.RenderTransform>
                                        </ContentControl>
                                    </Border>
                                </Border>

                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TaskCheckBoxTextStyle"
                   TargetType="controls:ToggleControl">
                <Setter Property="Background"
                        Value="{x:Null}" />
                <Setter Property="FontSize"
                        Value="24" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="controls:ToggleControl">
                            <Grid Background="{TemplateBinding Background}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CheckStates">
                                        <VisualState x:Name="Unchecked">
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.25"
                                                                 To="1"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 Storyboard.TargetName="Text" />
                                                <DoubleAnimation Duration="0:0:0.35"
                                                                 To="0"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 Storyboard.TargetName="Strike">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CircleEase EasingMode="EaseOut" />
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Checked">
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0.25"
                                                                 To="0.5"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 Storyboard.TargetName="Text" />
                                                <DoubleAnimation Duration="0:0:0.35"
                                                                 To="1"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 Storyboard.TargetName="Strike">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CircleEase EasingMode="EaseOut" />
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Indeterminate" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <!--Text-->
                                <Grid IsHitTestVisible="False"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left">
                                    <TextBlock x:Name="Text"
                                               Text="{TemplateBinding Content}"
                                               Style="{StaticResource NormalTextStyle}"
                                               FontSize="{TemplateBinding FontSize}"
                                               TextWrapping="NoWrap"
                                               TextTrimming="WordEllipsis" />

                                    <!--Přeskrtnutí-->
                                    <Border BorderBrush="{StaticResource SubtleBrush}"
                                            Opacity="0.7"
                                            BorderThickness="0,0,0,2"
                                            VerticalAlignment="Center">
                                        <Border.RenderTransform>
                                            <CompositeTransform x:Name="Strike"
                                                                TranslateY="4"
                                                                ScaleX="0" />
                                        </Border.RenderTransform>
                                    </Border>
                                </Grid>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

