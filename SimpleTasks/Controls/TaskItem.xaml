<UserControl x:Class="SimpleTasks.Controls.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
             xmlns:controls="clr-namespace:SimpleTasks.Controls"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="200"
             d:DesignWidth="400"
             x:Name="Control">

    <Border x:Name="RootBorder"
            DataContext="{Binding Task, ElementName=Control}">
        <VisualStateManager.VisualStateGroups>

            <!--CompleteStates-->
            <VisualStateGroup x:Name="CompleteStates">
                <VisualStateGroup.Transitions>
                    <VisualTransition To="Uncompleted"
                                      GeneratedDuration="0:0:0.35">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>

                    <VisualTransition To="Completed"
                                      GeneratedDuration="0:0:0.2">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>

                <!--Uncompleted-->
                <VisualState x:Name="Uncompleted">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TaskInfoStackPanel"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>

                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="TaskInfoTransform"
                                         Storyboard.TargetProperty="Y"
                                         To="0"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="MaxHeight"
                                         To="71"
                                         Duration="0" />

                        <DoubleAnimation Storyboard.TargetName="TaskPriorityGrid"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="SubtasksStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="1"
                                         Duration="0" />
                    </Storyboard>
                </VisualState>

                <!--Completed-->
                <VisualState x:Name="Completed">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TaskInfoStackPanel"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>

                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="TaskInfoTransform"
                                         Storyboard.TargetProperty="Y"
                                         To="-15"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="TaskInfoStackPanel"
                                         Storyboard.TargetProperty="MaxHeight"
                                         To="0"
                                         Duration="0" />

                        <DoubleAnimation Storyboard.TargetName="TaskPriorityGrid"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.45"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="SubtasksStackPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0.45"
                                         Duration="0" />
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>

            <!--GestureStates-->
            <VisualStateGroup x:Name="GestureStates">
                <VisualStateGroup.Transitions>
                    <VisualTransition To="GestureEndDrag"
                                      GeneratedDuration="0:0:0.4">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>

                    <VisualTransition To="GestureDragOk"
                                      GeneratedDuration="0:0:0.18" />
                    <VisualTransition From="GestureDragOk"
                                      GeneratedDuration="0:0:0.18" />

                </VisualStateGroup.Transitions>

                <!--Start-->
                <VisualState x:Name="GestureStartDrag">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RootTransform"
                                                       Storyboard.TargetProperty="X">
                            <DiscreteDoubleKeyFrame KeyTime="0"
                                                    Value="0" />
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                         Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                         To="0"
                                         Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                    </Storyboard>
                </VisualState>

                <!--OK-->
                <VisualState x:Name="GestureDragOk">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                         Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                         To="0.4"
                                         Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource AccentColor}"
                                        Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource AccentColor}"
                                        Duration="0" />
                    </Storyboard>
                </VisualState>

                <!--Drag-->
                <VisualState x:Name="GestureDrag">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                         Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                         To="0"
                                         Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                    </Storyboard>
                </VisualState>

                <!--End-->
                <VisualState x:Name="GestureEndDrag">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="RootTransform"
                                         Storyboard.TargetProperty="X"
                                         To="0"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                         Storyboard.TargetProperty="Opacity"
                                         To="0"
                                         Duration="0" />
                        <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                         Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                                         To="0"
                                         Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                        <ColorAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                        Storyboard.TargetProperty="(ContentControl.Foreground).(SolidColorBrush.Color)"
                                        To="{StaticResource SubtleColor}"
                                        Duration="0" />
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>

            <!--ScheduledStates-->
            <VisualStateGroup x:Name="ScheduledStates">
                <VisualStateGroup.Transitions>
                    <VisualTransition To="Scheduled"
                                      GeneratedDuration="0:0:0.2">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>

                    <VisualTransition To="NotScheduled"
                                      GeneratedDuration="0:0:0.2">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>

                <!--Scheduled-->
                <VisualState x:Name="Scheduled" />

                <!--NotScheduled-->
                <VisualState x:Name="NotScheduled">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ReminderGrid"
                                                       Storyboard.TargetProperty="Opacity">
                            <DiscreteDoubleKeyFrame KeyTime="0"
                                                    Value="0" />
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>

        <Border.RenderTransform>
            <TranslateTransform x:Name="RootTransform" />
        </Border.RenderTransform>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"
                                  MinWidth="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Pozadí-->
            <Border x:Name="BackgroundBorder"
                    Grid.ColumnSpan="2"
                    Margin="-480,0"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{StaticResource TasksListDelimiterBrush}">
                <Border.Background>
                    <SolidColorBrush Color="{StaticResource AccentColor}"
                                     Opacity="0" />
                </Border.Background>
            </Border>

            <!--Info + Podúkoly-->
            <StackPanel Grid.Column="1">

                <!--Horní + spodní Info-->
                <Button Tap="Task_Tap">
                    <Button.Template>
                        <ControlTemplate TargetType="ButtonBase" />
                    </Button.Template>

                    <Grid Background="Transparent"
                          Tap="LOL_OMG"
                          ManipulationStarted="InfoGrid_ManipulationStarted"
                          ManipulationCompleted="InfoGrid_ManipulationCompleted"
                          ManipulationDelta="InfoGrid_ManipulationDelta">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--Horní info-->
                        <StackPanel Orientation="Horizontal"
                                    Height="70">

                            <!--Vysoká/nízká priorita-->
                            <Grid x:Name="TaskPriorityGrid">

                                <!--Vysoká priorita-->
                                <Border Visibility="{Binding IsHighPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentControl Style="{StaticResource HighPriorityIconStyle}"
                                                    Foreground="{StaticResource AccentBrush}"
                                                    Opacity="1"
                                                    Margin="-5,0,-16,50"
                                                    MaxHeight="0">
                                    </ContentControl>
                                </Border>

                                <!--Nízká priorita-->
                                <Border Visibility="{Binding IsLowPriority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ContentControl Style="{StaticResource LowPriorityIconStyle}"
                                                    Foreground="{StaticResource SubtleBrush}"
                                                    Opacity=".6"
                                                    Margin="-5,0,-16,40"
                                                    MaxHeight="0"
                                                    RenderTransformOrigin="0.5,0.5">
                                        <ContentControl.RenderTransform>
                                            <CompositeTransform ScaleX="0.8"
                                                                ScaleY="0.8" />
                                        </ContentControl.RenderTransform>
                                    </ContentControl>
                                </Border>
                            </Grid>

                            <!--Název-->
                            <controls:ToggleControl IsChecked="{Binding IsCompleted}"
                                                    Content="{Binding Title, FallbackValue='Dummy title'}"
                                                    Style="{StaticResource TaskCheckBoxTextStyle}"
                                                    IsHitTestVisible="False"
                                                    FontSize="32"
                                                    Margin="8,0,0,4" />
                        </StackPanel>

                        <!--Spodní info-->
                        <StackPanel x:Name="TaskInfoStackPanel"
                                    Orientation="Vertical"
                                    Grid.Row="1"
                                    Margin="0,-15,0,0"
                                    MaxHeight="71"
                                    RenderTransformOrigin="0.5,0.5">
                            <StackPanel.RenderTransform>
                                <TranslateTransform x:Name="TaskInfoTransform"
                                                    Y="0" />
                            </StackPanel.RenderTransform>

                            <!--Datum & připomenutí-->
                            <Grid x:Name="MoreInfo"
                                  MaxHeight="32"
                                  Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal">

                                    <!--Datum-->
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding HasDueDate, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ContentControl Style="{StaticResource CalendarIconStyle}"
                                                        Foreground="{StaticResource AccentBrush}"
                                                        Margin="6,0,-18,0"
                                                        VerticalAlignment="Bottom"
                                                        MaxHeight="0">
                                            <ContentControl.RenderTransform>
                                                <CompositeTransform ScaleX="0.55"
                                                                    ScaleY="0.55"
                                                                    TranslateX="0"
                                                                    TranslateY="-29" />
                                            </ContentControl.RenderTransform>
                                        </ContentControl>
                                        <TextBlock Text="{Binding DueDate, Converter={StaticResource TaskToDueStringConverter}, FallbackValue='pondělí, 12. prosince'}"
                                                   Style="{StaticResource SlightTextStyle}"
                                                   FontSize="22"
                                                   Margin="0,1,8,0"
                                                   VerticalAlignment="Bottom" />
                                    </StackPanel>

                                    <!--Připomenutí-->
                                    <Grid x:Name="ReminderGrid">
                                        <StackPanel Orientation="Horizontal"
                                                    Visibility="{Binding HasReminder, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <!--Ikona-->
                                            <ContentControl Style="{StaticResource ReminderIconStyle}"
                                                            Margin="6,0,-18,0"
                                                            MaxHeight="0"
                                                            VerticalAlignment="Bottom">
                                                <ContentControl.Foreground>
                                                    <SolidColorBrush x:Name="Color"
                                                                     Color="{StaticResource AccentColor}" />
                                                </ContentControl.Foreground>
                                                <ContentControl.RenderTransform>
                                                    <CompositeTransform ScaleX="0.55"
                                                                        ScaleY="0.55"
                                                                        TranslateX="1"
                                                                        TranslateY="-28" />
                                                </ContentControl.RenderTransform>
                                            </ContentControl>

                                            <!--Text-->
                                            <TextBlock Text="{Binding Reminder, Converter={StaticResource ReminderConverter}, FallbackValue='2 dny'}"
                                                       Style="{StaticResource SlightTextStyle}"
                                                       VerticalAlignment="Bottom"
                                                       FontSize="22"
                                                       Margin="0,1,8,0" />

                                        </StackPanel>
                                    </Grid>

                                </StackPanel>
                            </Grid>

                            <!--Detail-->
                            <Grid x:Name="DetailWrapper"
                                  MaxHeight="30"
                                  Margin="0,-10,12,10"
                                  Visibility="{Binding Detail, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                <TextBlock Text="{Binding Detail, FallbackValue='Dummy detail'}"
                                           Style="{StaticResource SlightTextStyle}"
                                           FontSize="22"
                                           TextWrapping="NoWrap"
                                           TextTrimming="WordEllipsis"
                                           Opacity="0.8"
                                           Margin="8,0,20,0" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Button>

                <!--Podúkoly-->
                <StackPanel x:Name="SubtasksStackPanel"
                            Margin="3,-5,0,10"
                            Visibility="{Binding Subtasks.Count, Converter={StaticResource IntegerToVisibilityConverter}, ConverterParameter='!0'}">
                    <ItemsControl ItemsSource="{Binding Subtasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="RootBorder"
                                        ManipulationStarted="SubtaskBorder_ManipulationStarted"
                                        ManipulationCompleted="SubtaskBorder_ManipulationCompleted"
                                        ManipulationDelta="SubtaskBorder_ManipulationDelta"
                                        Background="Transparent">
                                    <Border.Resources>
                                        <Storyboard x:Key="ResetTranslate">
                                            <DoubleAnimation Storyboard.TargetName="RootBorder"
                                                             Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.X)"
                                                             To="0"
                                                             Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwipeLeftGestureIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SwipeRightGestureIcon"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0:0:0.4">
                                                <DoubleAnimation.EasingFunction>
                                                    <CircleEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwipeLeftGestureIcon"
                                                                           Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                                                        Value="Transparent" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwipeRightGestureIcon"
                                                                           Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                                                        Value="Transparent" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </Border.Resources>
                                    <Border.RenderTransform>
                                        <TranslateTransform />
                                    </Border.RenderTransform>

                                    <Grid Height="50">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="ButtonBase" />
                                            </Button.Template>

                                            <Border Background="Transparent"
                                                    Tap="LOL_OMG">
                                                <ToggleButton IsChecked="{Binding IsCompleted}"
                                                              Style="{StaticResource TaskCheckBoxStyle}"
                                                              IsHitTestVisible="False" />
                                            </Border>
                                        </Button>

                                        <Button Grid.Column="1">
                                            <Button.Template>
                                                <ControlTemplate TargetType="ButtonBase" />
                                            </Button.Template>

                                            <Border Background="Transparent"
                                                    Tap="LOL_OMG">
                                                <controls:ToggleControl IsChecked="{Binding IsCompleted}"
                                                                        Content="{Binding Text}"
                                                                        Style="{StaticResource TaskCheckBoxTextStyle}"
                                                                        IsHitTestVisible="False"
                                                                        Margin="5,0,0,0" />
                                            </Border>
                                        </Button>

                                        <!--Swipe left gesture icon-->
                                        <ContentControl Grid.ColumnSpan="2"
                                                        x:Name="SwipeLeftGestureIcon"
                                                        Margin="-60"
                                                        Grid.Column="1"
                                                        Foreground="Transparent"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Right" />

                                        <!--Swipe right gesture icon-->
                                        <ContentControl Grid.ColumnSpan="2"
                                                        x:Name="SwipeRightGestureIcon"
                                                        Margin="-105"
                                                        Grid.Column="1"
                                                        Foreground="Transparent"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </StackPanel>

            <!--Checkbox-->
            <Button Grid.Column="0"
                    Width="60"
                    Visibility="{Binding Current.General.HideTaskCheckBox, 
                                         Converter={StaticResource BooleanToVisibilityConverter}, 
                                         ConverterParameter='!', 
                                         Source={StaticResource Settings}, 
                                         FallbackValue=Visible}">
                <Button.Template>
                    <ControlTemplate TargetType="ButtonBase" />
                </Button.Template>

                <Border Tap="Checkbox_Tap"
                        Background="Transparent"
                        VerticalAlignment="Top"
                        Margin="10,10,0,0"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Left">
                    <ToggleButton Style="{StaticResource TaskCheckBoxStyle}"
                                  IsChecked="{Binding IsCompleted}"
                                  IsHitTestVisible="False" />
                </Border>
            </Button>

            <!--Swipe left gesture icon-->
            <ContentControl Grid.ColumnSpan="2"
                            x:Name="SwipeLeftGestureIcon"
                            Margin="-65"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                <ContentControl.Foreground>
                    <SolidColorBrush Color="{StaticResource SubtleColor}" />
                </ContentControl.Foreground>
            </ContentControl>

            <!--Swipe right gesture icon-->
            <ContentControl Grid.ColumnSpan="2"
                            x:Name="SwipeRightGestureIcon"
                            Margin="-118"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                <ContentControl.Foreground>
                    <SolidColorBrush Color="{StaticResource SubtleColor}" />
                </ContentControl.Foreground>
            </ContentControl>
        </Grid>
    </Border>

</UserControl>