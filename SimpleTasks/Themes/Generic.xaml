    <Style TargetType="calendar:Calendar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="calendar:Calendar">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>

                            <!--Display States-->
                            <VisualStateGroup x:Name="DisplayStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition To="MonthsMode"
                                                      GeneratedDuration="0:0:0.45">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <QuarticEase EasingMode="EaseInOut" />
                                        </VisualTransition.GeneratedEasingFunction>
                                    </VisualTransition>
                                    <VisualTransition To="DaysMode"
                                                      GeneratedDuration="0:0:0.45">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <QuarticEase EasingMode="EaseInOut" />
                                        </VisualTransition.GeneratedEasingFunction>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="MonthsMode">
                                    <Storyboard>

                                        <DoubleAnimation Storyboard.TargetName="MonthItemsGrid"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MonthItemsGrid"
                                                                       Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="True" />
                                        </ObjectAnimationUsingKeyFrames>

                                        <DoubleAnimation Storyboard.TargetName="MonthItemsGridTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" />
                                        <DoubleAnimation Storyboard.TargetName="MonthItemsGridTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" />

                                        <DoubleAnimation Storyboard.TargetName="YearBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <DoubleAnimation Storyboard.TargetName="YearMonthBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="YearMonthBorder"
                                                                       Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="False" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="DaysMode">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MonthItemsGrid"
                                                                       Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="False" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="YearMonthBorder"
                                                                       Storyboard.TargetProperty="IsHitTestVisible">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="True" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                        </VisualStateManager.VisualStateGroups>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--YearMonthLabel-->
                        <Border Grid.Column="1"
                                x:Name="YearMonthBorder">
                            <TextBlock Text="{TemplateBinding YearMonthLabel}"
                                       Style="{StaticResource NormalTextStyle}"
                                       FontSize="42"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,6">
                            </TextBlock>
                        </Border>

                        <!--YearLabel-->
                        <Border Grid.Column="1"
                                x:Name="YearBorder"
                                IsHitTestVisible="False"
                                Opacity="0">
                            <TextBlock Text="{TemplateBinding YearLabel}"
                                       Style="{StaticResource NormalTextStyle}"
                                       FontSize="54"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,0">
                            </TextBlock>
                        </Border>

                        <!--Previous Button-->
                        <Button Grid.Column="0"
                                x:Name="PreviousButton"
                                Visibility="{Binding ShowNavigationButtons, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                                VerticalAlignment="Bottom">
                            <Button.Template>
                                <ControlTemplate />
                            </Button.Template>

                            <Canvas Width="76"
                                    Height="60"
                                    Background="Transparent">
                                <Canvas.CacheMode>
                                    <BitmapCache RenderAtScale="1" />
                                </Canvas.CacheMode>
                                <Path Width="43.175"
                                      Height="30.8"
                                      Canvas.Left="16.4125"
                                      Canvas.Top="14.6"
                                      Stretch="Fill"
                                      Fill="{StaticResource NormalBrush}"
                                      Data="F1 M 57,42L 57,34L 32.25,34L 42.25,24L 31.75,24L 17.75,38L 31.75,52L 42.25,52L 32.25,42L 57,42 Z " />
                            </Canvas>
                        </Button>

                        <!--Next Button-->
                        <Button Grid.Column="2"
                                x:Name="NextButton"
                                Visibility="{Binding ShowNavigationButtons, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                                VerticalAlignment="Bottom">
                            <Button.Template>
                                <ControlTemplate />
                            </Button.Template>

                            <Canvas Width="76"
                                    Height="60"
                                    Background="Transparent">
                                <Canvas.CacheMode>
                                    <BitmapCache RenderAtScale="1" />
                                </Canvas.CacheMode>
                                <Path Width="43.175"
                                      Height="30.8"
                                      Canvas.Left="16.4125"
                                      Canvas.Top="14.6"
                                      Stretch="Fill"
                                      Fill="{StaticResource NormalBrush}"
                                      Data="F1 M 19.0002,34L 19.0002,42L 43.7502,42L 33.7502,52L 44.2502,52L 58.2502,38L 44.2502,24L 33.7502,24L 43.7502,34L 19.0002,34 Z " />
                            </Canvas>
                        </Button>

                        <!--Calendar DayOfWeek Items-->
                        <Grid Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              x:Name="DayOfWeekItemsGrid" />

                        <!--Calendar Items-->
                        <Grid Grid.Row="2"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              x:Name="ItemsGrid" />

                        <!--Month Items-->
                        <Grid Grid.Row="1"
                              Grid.RowSpan="2"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Opacity="0"
                              IsHitTestVisible="False"
                              x:Name="MonthItemsGrid"
                              Background="{StaticResource CalendarMonthBackgroundBrush}"
                              RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <CompositeTransform x:Name="MonthItemsGridTransform"
                                                    ScaleX="2.5"
                                                    ScaleY="2.5" />
                            </Grid.RenderTransform>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="calendar:CalendarItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="calendar:CalendarItem">
                    <Grid>

                        <VisualStateManager.VisualStateGroups>

                            <!--Selection States-->
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition To="Selected"
                                                      GeneratedDuration="0:0:0.15" />
                                    <VisualTransition To="Unselected"
                                                      GeneratedDuration="0:0:0.15" />
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="Selected">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="OuterGrid"
                                                        Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource PhoneAccentColor}" />
                                        <ColorAnimation Storyboard.TargetName="DayNumberBlock"
                                                        Storyboard.TargetProperty="(Grid.Foreground).(SolidColorBrush.Color)"
                                                        To="{StaticResource CalendarSelectedItemColor}" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unselected" />
                            </VisualStateGroup>

                            <!--Month States-->
                            <VisualStateGroup x:Name="MonthStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition To="OtherMonth"
                                                      GeneratedDuration="0:0:0.15" />
                                    <VisualTransition To="CurrentMonth"
                                                      GeneratedDuration="0:0:0.15" />
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="OtherMonth">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="OuterBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.35" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="CurrentMonth" />
                            </VisualStateGroup>

                            <!--Enabled States-->
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition To="Disabled"
                                                      GeneratedDuration="0:0:0.35" />
                                    <VisualTransition To="Normal"
                                                      GeneratedDuration="0:0:0.35" />
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="DisabledBrush"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <DoubleAnimation Storyboard.TargetName="DayNumberBlock"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.45" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal" />
                            </VisualStateGroup>

                            <!--Today States-->
                            <VisualStateGroup x:Name="TodayStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition To="IsToday"
                                                      GeneratedDuration="0:0:0.35" />
                                    <VisualTransition To="NotToday"
                                                      GeneratedDuration="0:0:0.35" />
                                </VisualStateGroup.Transitions>

                                <VisualState x:Name="IsToday">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TodayBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="NotToday" />
                            </VisualStateGroup>

                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="OuterBorder"
                                Style="{StaticResource CalendarBorderStyle}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush x:Name="DisabledBrush"
                                                     EndPoint="0,0"
                                                     StartPoint="5,5"
                                                     SpreadMethod="Repeat"
                                                     MappingMode="Absolute"
                                                     Opacity="0.0">
                                    <GradientStop Color="{StaticResource CalendarDisabledColor}"
                                                  Offset="0" />
                                    <GradientStop Color="{StaticResource CalendarDisabledColor}"
                                                  Offset="0.2" />
                                    <GradientStop Color="Transparent"
                                                  Offset="0.2" />
                                    <GradientStop Color="Transparent"
                                                  Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid x:Name="OuterGrid"
                                  Background="Transparent">
                                <Border x:Name="TodayBorder"
                                        Opacity="0"
                                        BorderThickness="3"
                                        BorderBrush="{StaticResource PhoneAccentBrush}" />
                                <Rectangle Fill="{StaticResource CalendarItemBackgroundBrush}"
                                           Opacity="0.45" />
                                <TextBlock x:Name="DayNumberBlock"
                                           Text="{Binding Path=DayNumber, RelativeSource={RelativeSource TemplatedParent}}"
                                           Style="{StaticResource NormalTextStyle}"
                                           FontSize="28"
                                           Foreground="{StaticResource CalendarItemBrush}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Margin="0,8" />
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="calendar:CalendarDayOfWeekItem">
        <Setter Property="Template">
